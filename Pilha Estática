#include <stdio.h>

const int MAX = 5;

struct aluno{
    int num;
    int name;
};

struct pilha{
    struct aluno alunos[5];
    int base;
    int top;
    int limite;
};

void push(struct pilha *p, int novo);
int pop(struct pilha *p, struct aluno *item);
void reset(struct pilha *p);
int full(struct pilha p);
int empty(struct pilha p);
void print(struct pilha *p);

int main(){
        
     struct pilha pilha1;
     reset(&pilha1);
     int i = 0, tmp;
     for(; i == 0;){
        printf("Diga que desejas colocar na pilha: ");
        scanf("%d", &tmp);
        push(&pilha1, tmp);
        i = full(pilha1);
     }
     print(&pilha1);

return 0;
}

void reset(struct pilha *p){

    p->base = 0;
    p->top = 0;
    p->limite = MAX;
}

void push(struct pilha *p, int novo){
    
    if(full(*p)){
        printf("Pilha cheia...");
        return;
    }
        
    p->alunos[(p->top)].num = novo;
    p->top ++;
    
}

int pop(struct pilha *p, struct aluno *item){
    p->top --;
    if(empty(*p))
        return 0;
    else{
        *item = p->alunos[p->top];
        return 1;
    }
}

void print(struct pilha *p){
    struct pilha tmpPilha = *p;
    struct aluno tmpAluno;
    int x;
    for(;p->top >= 0;){
        x = pop(&tmpPilha, &tmpAluno);
            printf("\nElemento: %d", tmpAluno.num);
        
        if(x == 0)
            break;
    }
}

int full(struct pilha p){
    
    if(p.top == p.limite)
        return 1;
    else 
        return 0;
}

int empty(struct pilha p){
    
    if(p.top == 0)
        return 1;
        
    return 0;
}
